/* ─────────────────────────────────────────────────────────
   Styled QComboBox ≈ “Dropdown button”
   ───────────────────────────────────────────────────────── */

/* Base combo box */
QComboBox {
  color: #FFFFFF;                  /* text-white */
  background-color: #232322;       /* bg-blue-700 */
  font-weight: 500;                /* font-medium */
  font-size: 14px;                 /* text-sm */
  padding: 10px 20px;              /* py-2.5 (10px), px-5 (20px) */
  border: 1px solid #414141;
  border-radius: 5px;              /* rounded-lg */
  margin-left: 10px;               /* me-2 (≈8px) */
  /* margin-bottom: 0px;  */
}
/* Hover state */
QComboBox:hover {
  background-color: #303034;       /* hover:bg-blue-800 */
}
/* Focus ring */
QComboBox:focus {
  outline: none;
  /* border: none;       focus:ring-4 & ring-blue-300 approximated */
}

/* Drop-down button (the arrow container) */
QComboBox::drop-down {
  subcontrol-position: top right;
  width: 32px;
  background: transparent;
}
/* Drop-down arrow */
QComboBox::down-arrow {
  image: url(/home/vulture/Desktop/DRDO/GUI/Assets/icons8-dropdown-64.png);  /* replace with your arrow asset */
  width: 30px; height: 30px;             /* w-2.5 h-2.5 */
  margin-right: 8px;
}
QComboBox::down-arrow:Hover {
  image: url(/home/vulture/Desktop/DRDO/GUI/Assets/icons8-drop-down-64.png);  
  width: 28px; height: 28px;             /* w-2.5 h-2.5 */
  margin-right: 8px;
}
/* Dropdown list view (the popup list) */
QComboBox QAbstractItemView {
  background-color:transparent;          /* bg-white */
  border: 0px solid #E5E7EB;          /* divide-gray-100 as border */
  border-radius: 0px;                 /* rounded-lg */
  padding: 0px 4px;                     /* py-2 */
  outline: none;
  selection-background-color: #2E3A59; /* hover:bg-gray-100 */
  color: #FFFFFF;                     /* text-gray-700 */
  font-size: 14px;                    /* text-sm */
  font-weight: 500;
  min-width: 160px;                   /* w-44 ≈ 176px */
}
/* Popup items */
QComboBox QAbstractItemView::item {
  color: black;
  font-size: 14px;  
  font-weight: 500;
  padding: 10px 16px;                  /* px-4 py-2 */
}
QComboBox QAbstractItemView::item:hover {
  background-color: #2E3A59; 
  font-size: 14px;           /* hover:bg-gray-100 */
  font-weight: 500;
  color: #FFFFFF;
}

QRadioButton {
    background-color: #232322;
    color: white;
    font-size: 14px;                    /* text-sm */
    font-weight: 500;
    padding: 10px 20px;
    border: 1px solid #414141;
    border-radius: 5px;
    margin: 10px; 
}
QRadioButton:hover {
    background-color: #303034;
}
/* White circle when unchecked */
QRadioButton::indicator {
    width: 15px;
    height: 15px;
    border-radius: 9px;
    border: 2px solid white;
    background-color: white;
}

/* Red dot when checked */
QRadioButton::indicator:checked {
    background-color: red;
    border: 2px solid white;
}

