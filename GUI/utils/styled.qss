    padding: 8px 0px 7px 18px;               /* py-2.5 (10px), px-5 (20px) */
    border: none;
    border-radius: 8px;           /* rounded-full */
    margin-right: 8px;               /* me-2 (≈8px) */
    margin-top:0px;
    margin-left:0px;
    margin-bottom:0px;
}
#ButtonToggleTheme:hover{
  background-color:#303034;
}
#ButtonToggleTheme:focus {
  outline: none;
  border: none;       /* focus:ring-4 & ring-gray-300 */
}


/* Push button */
QPushButton {
  color: #FFFFFF;                  /* text-white */
  background-color: #232322;
  border: 1px solid #414141;
  font-weight: 500;                /* font-medium */
  font-size: 14px;                 /* text-sm */
  padding: 11px 20px;              /* py-2.5 (10px), px-5 (20px) */
  border-radius: 4px;           /* rounded-full */
  margin: 10px;               /* me-2 (≈8px) */
  /* margin-bottom: 0px;              mb-2 (≈8px) */
}
/* Hover */
QPushButton:hover {
  background-color: #303034;       /* hover:bg-gray-900 */
}
