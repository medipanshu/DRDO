/* Base label */
QLabel {
  background-color: #272727;       
  color: #FFFFFF;                  /* text-gray-800 */
  font-weight: 500;                /* font-medium */
  font-size: 12px;                 /* text-xs */
  padding: 2px 10px;               /* py-0.5 (2px), px-2.5 (10px) */
