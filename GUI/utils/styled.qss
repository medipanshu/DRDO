/* Neumorphic/Dark Theme */
QMainWindow {
    background-color: #2C2C2C;
    color: #E0E0E0;
}

/* Soft “raised” panels */
QFrame, QScrollArea, QListView {
  background-color: #2E3136;
  border: 0.5px solid #414141;
  border-radius: 0px;
}

/* MenuBar & Menu */
QMenu {
  background-color: #2C2C2C;
  border: 1px solid #414141;
  /* border-radius: 28px; */
  color: #FFFFFF;
  padding: 2px 4px; 
}
QMenu::item {
  background: transparent;
  font-weight: 500;
  font-size: 14px;
  padding: 8px 10px;   
}
QMenu::item:selected {
    background-color: #232322;
    color: #FFFFFF;
    font-weight: 500;
    font-size: 16px;
    padding: 1px 16px; 
}
QMenu::separator {
  height: 1px;
  background-color: #5e5e5e;
  margin: 4px 10px;
}
QMenuBar {
  background: #232322;
  color: white;
  border-bottom: 1px solid #5e5e5e;
  padding: 4px 0px;
  font-size: 14px;
  font-weight: 500;
}
QMenuBar::item {
  background: transparent;
  /* border: 0.5px solid white; */
  font-size: 14px;
  border-radius: 8px;
  padding: 8px 16px;   
}
QMenuBar::item:selected {
  background: #303034;
}
#ButtonToggleTheme {
    color: #FFFFFF;                  /* text-white */
    background-color: transparent;       /* bg-gray-800 */
    font-weight: 500;                /* font-medium */
